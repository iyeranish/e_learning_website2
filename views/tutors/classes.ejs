<div class="container mt-5 mb-3">
<% if((tutor.courses.length == 0)){ %>
<p>No courses</p>
<%}else {%>
<div class="container mt-5 mb-3">
  <div class="row">
    <% for(let course of tutor.courses){ %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <%=tutor.first_name %> <%=tutor.last_name%>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= course.title %></h5>
          <hr />
          <p class="card-text"><%= course.description.substring(0,60)%>....</p>
          <a
            href="/classes/<%=course._id%>"
            class="card-link"
            style="text-decoration: none"
            >View More</a
          >
        </div>
      </div>
    </div>
    <% } %>
  </div>
  
</div>
<%}%>
