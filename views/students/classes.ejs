<% layout('./layout/boilerplate') -%>

<a href="/classes">Enroll new Course</a>
<h1><%=student.first_name %> <%=student.last_name%></h1>

<p></p>
<p></p>
<p></p>

<div class="container mt-5 mb-3">
  <div class="row">
    <% for(let course of student.enrolledCourses){ %>
    <div class="col-md-4">
      <div class="card p-3 mb-2">
        <div class="d-flex justify-content-between">
          <div class="d-flex flex-row align-items-center">
            <div class="icon"><i class="bx bxl-mailchimp"></i></div>
            <div class="ms-2 c-details">
              <h6>
                <% course.tutor.first_name %> <% course.tutor.last_name %>
              </h6>
              <br />
              <span>1 days ago</span>
            </div>
          </div>
          <br />
          <h6><%= course.title %></h6>
        </div>
        <div class="mt-5">
          <p class="heading"><%= course.description.substring(0,60)%> ....</p>
          <div class="mt-5">
            <div class="progress">
              <div
                class="progress-bar"
                role="progressbar"
                style="width: 50%"
                aria-valuenow="50"
                aria-valuemin="0"
                aria-valuemax="100"
              ></div>
            </div>
            <div class="mt-3">
              <a href="/classes/<%=course._id%>" class="card-link">View More</a>
              <span class="text1"
                >32 Applied <span class="text2">of 50 capacity</span></span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
